        let currentAreaIndex = 0;
        let currentQuestionIndex = 0;
        let answers = [];

        function initializeDiagnostic() {
            // Initialize answers array
            answers = diagnosticoData.areas.map(area => 
                new Array(area.perguntas.length).fill(0)
            );
            
            showExplanation();
        }

        function showExplanation() {
            const area = diagnosticoData.areas[currentAreaIndex];
            
            document.getElementById('current-area-title').textContent = area.nome;
            document.getElementById('current-area-explanation').innerHTML = `
                <h3>${area.explicacao.titulo}</h3>
                <p>${area.explicacao.texto}</p>
            `;
            
            document.getElementById('explanation-step').classList.remove('hidden');
            document.getElementById('question-step').classList.add('hidden');
            document.getElementById('results-step').classList.add('hidden');
        }

        function startQuestions() {
            currentQuestionIndex = 0;
            showQuestion();
        }

        function showQuestion() {
            const area = diagnosticoData.areas[currentAreaIndex];
            const totalQuestions = diagnosticoData.areas.reduce((sum, area) => sum + area.perguntas.length, 0);
            let absoluteQuestionIndex = 0;
            
            // Calculate absolute question index
            for (let i = 0; i < currentAreaIndex; i++) {
                absoluteQuestionIndex += diagnosticoData.areas[i].perguntas.length;
            }
            absoluteQuestionIndex += currentQuestionIndex + 1;
            
            document.getElementById('question-area-title').textContent = area.nome;
            document.getElementById('current-question').innerHTML = `<strong>${area.perguntas[currentQuestionIndex]}</strong>`;
            document.getElementById('current-slider').value = answers[currentAreaIndex][currentQuestionIndex];
            document.getElementById('current-score').textContent = answers[currentAreaIndex][currentQuestionIndex];
            document.getElementById('progress-text').textContent = `Pergunta ${absoluteQuestionIndex} de ${totalQuestions}`;
            document.getElementById('progress-fill').style.width = `${(absoluteQuestionIndex / totalQuestions) * 100}%`;
            document.getElementById('area-progress').textContent = `${currentQuestionIndex + 1}/${area.perguntas.length} - ${area.nome}`;
            
            // Update navigation buttons
            const isLastQuestion = (currentAreaIndex === diagnosticoData.areas.length - 1) && 
                                  (currentQuestionIndex === area.perguntas.length - 1);
            document.getElementById('next-btn').textContent = isLastQuestion ? 'Finalizar üèÅ' : 'Pr√≥xima ‚û°';
            
            document.getElementById('explanation-step').classList.add('hidden');
            document.getElementById('question-step').classList.remove('hidden');
            document.getElementById('results-step').classList.add('hidden');
        }

        function updateCurrentScore(value) {
            document.getElementById('current-score').textContent = value;
            answers[currentAreaIndex][currentQuestionIndex] = parseInt(value);
        }

        function nextQuestion() {
            const currentArea = diagnosticoData.areas[currentAreaIndex];
            
            if (currentQuestionIndex < currentArea.perguntas.length - 1) {
                currentQuestionIndex++;
                showQuestion();
            } else if (currentAreaIndex < diagnosticoData.areas.length - 1) {
                currentAreaIndex++;
                showExplanation();
            } else {
                showResults();
            }
        }

        function showResults() {
            const areaScores = [];
            let totalPercentage = 0;
            
            diagnosticoData.areas.forEach((area, areaIndex) => {
                const areaTotal = answers[areaIndex].reduce((sum, score) => sum + score, 0);
                const areaPercentage = Math.round((areaTotal / (area.perguntas.length * 10)) * 100);
                areaScores.push({
                    nome: area.nome,
                    percentage: areaPercentage
                });
                totalPercentage += areaPercentage;
            });
            
            const overallPercentage = Math.round(totalPercentage / diagnosticoData.areas.length);
            
            // Show overall score
            document.getElementById('final-score').textContent = `${overallPercentage}%`;
            
            // Show detailed diagnosis
            let diagnosisData = getDiagnosisData(overallPercentage);
            
            document.getElementById('final-diagnosis').innerHTML = `
                <div style="margin-bottom: 30px;">
                    <h3 style="color: #d2bc8f; margin-bottom: 25px; font-size: 1.6em; text-align: center;">üìä Resultado do Seu Diagn√≥stico</h3>
                    <div class="areas-summary" style="display: grid; grid-template-columns: 1fr; gap: 15px; margin-bottom: 30px;">
                        ${areaScores.map(area => {
                            let areaStatus = '';
                            let areaColor = '';
