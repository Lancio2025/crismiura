        function getDiagnosisData(percentage) {
            if (percentage >= 80) {
                return {
                    titulo: "🟢 EXCELENTE! Você está no topo da valorização profissional!",
                    diagnostico: "Parabéns! Você demonstra um nível excepcional de competência e valorização profissional. Suas habilidades técnicas, estratégias de precificação e relacionamento com pacientes estão em um patamar de excelência.",
                    melhorar: [
                        "Continue aprimorando técnicas mais avançadas e inovadoras",
                        "Expanda conhecimentos em áreas complementares",
                        "Desenvolva ainda mais sua presença no mercado",
                        "Aperfeiçoe sistemas de gestão e processos internos"
                    ],
                    passos: [
                        "Busque um acompanhamento que te dê direcionamento, feedback dos processos e que tenha uma comunidade para que você possa estar no ambiente certo",
                        "Torne-se mentor de outros profissionais da área",
                        "Invista em marketing de autoridade (palestras, cursos, conteúdo)",
                        "Explore parcerias estratégicas e expansão da prática",
                        "Considere especialização em nichos de alto valor",
                        "Mantenha educação continuada em técnicas de ponta"
                    ]
                };
            } else if (percentage >= 60) {
                return {
                    titulo: "🟡 BOM! Você está no caminho certo, mas ainda há espaço para crescimento.",
                    diagnostico: "Você possui uma base sólida de conhecimentos e práticas profissionais, mas ainda há oportunidades significativas de melhoria em algumas áreas específicas.",
                    melhorar: [
                        "Técnicas de comunicação e persuasão com pacientes",
                        "Estratégias de precificação para valores premium",
                        "Sistemas de captação e retenção de pacientes",
                        "Protocolos de excelência em procedimentos",
                        "Confiança em procedimentos mais complexos"
                    ],
                    passos: [
                        "Busque um acompanhamento que te dê direcionamento, feedback dos processos e que tenha uma comunidade para que você possa estar no ambiente certo",
                        "Identifique e foque nas 2-3 áreas com menor pontuação",
                        "Invista em cursos específicos para suas deficiências",
                        "Pratique técnicas de fechamento de tratamentos",
                        "Revise e ajuste sua tabela de preços",
                        "Desenvolva um sistema de follow-up com pacientes",
                        "Estabeleça metas mensais claras de melhoria"
                    ]
                };
            } else if (percentage >= 40) {
                return {
                    titulo: "🟠 ATENÇÃO! Você está no caminho, mas tem áreas que precisam de ajustes urgentes.",
                    diagnostico: "Você possui conhecimentos básicos, mas há inconsistências significativas em sua prática profissional que estão limitando sua valorização no mercado.",
                    melhorar: [
